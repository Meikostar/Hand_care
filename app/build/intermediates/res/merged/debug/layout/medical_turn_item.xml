<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_city_listview_letter"
        style="@style/LetterIndexTextViewStyles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f0f0f0"
        android:clickable="false"
        android:textSize="18sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_bg"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.canplay.medical.view.MCheckBox
            android:id="@+id/iv_choose"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:clickable="false"
            android:visibility="gone"
            app:canNoClick="true"
            app:drawablechoose="@drawable/check"
            app:drawables="@drawable/uncheck" />

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginLeft="18dp"
            android:src="@drawable/moren" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="11dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阿莫西林"
                android:textColor="@color/slow_black"
                android:textSize="15.5sp" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text=""
                android:textColor="@color/color9"
                android:textSize="12.5sp" />

        </LinearLayout>

        <com.canplay.medical.view.ClearEditText
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:inputType="number|numberDecimal"
            android:minWidth="35dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="1"
            android:textColor="@color/slow_black"
            android:textColorHint="@color/color8"
            android:textSize="14sp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="粒"
            android:textColor="@color/slow_black"
            android:textSize="13.5sp" />

        <ImageView
            android:id="@+id/iv_del"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="15dp"
            android:padding="6dp"
            android:src="@drawable/delete" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@color/linecolor" />
</LinearLayout>