<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <TextView
        android:visibility="gone"
        android:background="#f0f0f0"
        android:id="@+id/tv_item_city_listview_letter"
        style="@style/LetterIndexTextViewStyles"
        android:textSize="18sp"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:background="@color/white"
        android:id="@+id/ll_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="83dp">
        <com.canplay.medical.view.MCheckBox
            android:visibility="gone"
            android:layout_marginLeft="15dp"
            android:clickable="false"
            app:canNoClick="true"
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_choose"
            app:drawablechoose="@drawable/check"
            app:drawables="@drawable/uncheck"
            android:layout_width="19dp"
            android:layout_height="19dp"/>
        <ImageView
            android:src="@drawable/moren"
            android:id="@+id/iv_img"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginLeft="18dp"/>
        <LinearLayout
            android:layout_marginLeft="11dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阿莫西林"
                android:textColor="@color/slow_black"
                android:textSize="15.5sp"
                />
            <TextView
                android:id="@+id/tv_number"
                android:layout_marginTop="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250mg"
                android:textColor="@color/color9"
                android:textSize="12.5sp"
                />

        </LinearLayout>
        <com.canplay.medical.view.ClearEditText
            android:paddingLeft="11dp"
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:minWidth="45dp"
            android:text="2颗"
            android:textColorHint="@color/color8"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/slow_black"
            android:textSize="14sp"
           />

        <ImageView
            android:padding="6dp"
            android:id="@+id/iv_del"
            android:src="@drawable/delete"
            android:layout_marginRight="15dp"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginLeft="7dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@color/linecolor"/>
</LinearLayout>