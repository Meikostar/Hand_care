<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/content_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:id="@+id/line"/>
    <com.canplay.medical.view.NavigationBar
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationLeft_img="@drawable/black_left"
        app:navigationRight_type="img"
        app:navigationRight_img="@drawable/home"
        app:navigationTitle="我的设备" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/linecolor"/>
    <LinearLayout
        android:id="@+id/ll_bg"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp" >
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_type"
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="药盒状态"
            android:textColor="@color/slow_black"
            android:textSize="15sp" />
       <ImageView
           android:layout_width="12dp"
           android:layout_height="13dp"
           android:layout_gravity="center_vertical"
           android:layout_marginRight="15dp"
           android:src="@drawable/arrow_left"/>
    </LinearLayout>
    <com.canplay.medical.view.loadingView.LoadingPager
        android:id="@+id/loadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.canplay.medical.view.RegularListView
            android:layout_marginTop="3dp"
            android:divider="#00000000"
            android:dividerHeight="0dip"
            android:listSelector="@android:color/transparent"
            android:id="@+id/rl_menu"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            style="@style/lv_content"/>
    </com.canplay.medical.view.loadingView.LoadingPager>


</LinearLayout>