<?xml version="1.0" encoding="utf-8"?>
<com.canplay.medical.view.scrollView.StickyScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/content_bg"

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout

            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <ImageView

                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/tv_time"
                android:text=""
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="@color/color8"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:paddingBottom="15dp"
            android:paddingTop="3dp"
            android:background="@color/white"
            android:id="@+id/ll_center"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="19dp"
                android:layout_width="113dp"
                android:layout_height="59dp">
                <ImageView
                    android:src="@drawable/char_bg"
                    android:layout_width="113dp"
                    android:layout_height="59dp"
                    />
                <TextView
                    android:id="@+id/tv_state"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#FF00A8FF"
                    android:text="正常"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>

            <LinearLayout
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_press"
                    android:text="9.9\nmmol/L"
                    android:textColor="@color/slow_black"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="9dp"
                    android:text="测试值"
                    android:textColor="@color/color8"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout

                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.9~6.1\n mmol/L"
                    android:textColor="@color/slow_black"
                    android:textSize="22sp" />

                <TextView

                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="正常值"
                    android:textColor="@color/color8"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/char_blue_line"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:text="7天"
                android:id="@+id/tv_cone"
                android:textSize="15sp"
                android:background="@drawable/choose_hui_rectangle"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <View

                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#00A8FF"/>

            <TextView
                android:textSize="15sp"

                android:gravity="center"
                android:text="15天"
                android:id="@+id/tv_ctwo"
                android:textColor="#00A8FF"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <View

                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#00A8FF"/>

            <TextView
                android:textSize="15sp"

                android:gravity="center"
                android:text="30天"
                android:id="@+id/tv_cthree"
                android:textColor="#00A8FF"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="18dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="28dp"
                android:gravity="center|left"
                android:text="血糖"
                android:textColor="@color/color8"
                android:textSize="12sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_state2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="— 正常值"
                    android:textColor="#ff6bd419"
                    android:textSize="12sp" />

                <TextView
                    android:layout_marginRight="15dp"
                    android:id="@+id/tv_state1"
                    android:drawablePadding="4dp"
                    android:drawableLeft="@drawable/cycle_red6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="异常值"
                    android:textColor="#FFFF5B74"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

            <com.canplay.medical.view.NoScrollViewPager
                android:id="@+id/viewpager_main"
                android:layout_width="match_parent"
                android:layout_height="230dp"

                android:background="@color/content_bg" />




    </LinearLayout>
</com.canplay.medical.view.scrollView.StickyScrollView>
